<Window x:Class="SuperMemoAssistant.Plugins.PDF.PDFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf1="clr-namespace:Patagames.Pdf.Net.Controls.Wpf;assembly=Patagames.Pdf.Wpf"
        mc:Ignorable="d"
        Title="PDFWindow" Height="450" Width="800">
  <Grid>

    <ScrollViewer Grid.Row="0" CanContentScroll="True" VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
      <wpf1:PdfViewer x:Name="PdfViewer" />
    </ScrollViewer>

  </Grid>
</Window>